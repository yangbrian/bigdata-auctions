<% include partials/header %>

<div class="container">


    <div class="row">

        <div class="col-md-12">

            <% if(check == 1) { %>

            <h2>Customer Rep Dashboard</h2>

            <h3>Customer Listing</h3>

            <table id="customer-list" class="table table-hover">
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>ZipCode</th>
                    <th>Telephone</th>
                    <th>Email</th>
                    <th><span class = 'plus'> <i class='fa fa-plus'></i></span></th>
                    <th></th>
                    <th></th>
                </tr>

            </table>

            <% } %>

            <% if(check == 2) { %>
            <table id=EditTable class="table tablehover" data-toggle="modal" data-target=".bs-example-modal-lg">

                <th><strong>Last Name</strong></th>
                <th><strong>First Name</strong></th>
                <th><strong>Address</strong></th>
                <th><strong>ZipCode</strong></th>
                <th><strong>Telephone</strong></th>
                <th><strong>Email</strong></th>

                <% for (var i = 0; i < newCust.length; i++) { %>
                <% if(!newCust[i].Level && !newCust[i].creditcardnum) { %>
                <tr data-id="<%= newCust[i].SSN %>" class='clickable-row '>
                    <td><%= newCust[i].LastName %></td>
                    <td><%= newCust[i].FirstName %></td>
                    <td><%= newCust[i].Address %></td>
                    <td><%= newCust[i].ZipCode %></td>
                    <td><%= newCust[i].telephone %></td>
                    <td><%= newCust[i].email %></td>
                </tr>
                <% } %>

                <% } %>

            </table>
            <% } %>

        </div>

    </div>

</div>


<!-- Modal -->
<div class="modal fade" id="add-customer" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Add New Customer</h4>
            </div>
            <div class="modal-body">
                <p>List a new customer</p>

                <form action="/" method="post" class="form-horizontal">

                    <div class="form-group">
                        <label for="card-number" class="col-sm-2 control-label">Credit Card #:</label>

                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="cardNumber" id="card-number"
                                   placeholder="123456789">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="customer-rating" class="col-sm-2 control-label">Customer Rating</label>

                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="rate" id="customer-rating" placeholder="0">
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success">Add Customer</button>
                        </div>
                    </div>

                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="edit-customer" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit Customer</h4>
            </div>
            <div class="modal-body">
                <p>Edit a customer</p>

                <form action="/" method="post" class="form-horizontal">

                    <div class="form-group">
                        <label for="card-number" class="col-sm-2 control-label">Credit Card #:</label>

                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="cardNumber" id="card-number"
                                   placeholder="123456789">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="customer-rating" class="col-sm-2 control-label">Customer Rating</label>

                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="rate" id="customer-rating" placeholder="0">
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success">Commit Changes</button>
                        </div>
                    </div>

                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>




<script type="text/javascript">
    loadCustomerTables();
</script>

